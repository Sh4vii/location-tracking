<%- include("partials/header"); -%>

<section id="dashboard">
        <div class="loader-container">
                  <div class="loader"></div>
                </div>
        <h1>Visited Places</h1>
                <p class="muted-paragraph"></p>
                
<div class="card-container">
   <section class="current-location accent">
            <div class="timeStamp">
              <p class="small">
              <%=locationHistory.date%>
            </p>
            <p class="small">
              <%=locationHistory.time%>
            </p>
            </div>
            
            <h2 id="current-position" class="medium">--- ---- -----</h2>
            <div>
              <p id="lat" class="small">Latitude: <%=locationHistory.latitude %></p>
              <p id="lon" class="small">Longitude: <%=locationHistory.longitude%></p>
            </div>
          </section>
          <section class="map-container" id="map">

          </section>
</div>
         
        
      </section>
      
<section class="controls">
  <a href="/dashboard" class="control"><i class="fa-solid fa-earth-africa"></i></a>
  <a href="/history" class="control"><i class="fa-solid fa-map-location-dot accent-color"></i></a>
  <a href="/notification" class="control"><i class="fa-solid fa-bell"></i></a>
</section>
      
	<script src="js/map.js"></script>
  </body>
</html>
